    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <link href="/stylesheets/bootstrap.css" rel="stylesheet" />
    <link href="/stylesheets/gaia.css" rel="stylesheet"/>

    <!--     Fonts and icons     -->
    <link href='https://fonts.googleapis.com/css?family=Cambo|Poppins:400,600' rel='stylesheet' type='text/css'>
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="/stylesheets/fonts/pe-icon-7-stroke.css" rel="stylesheet">
  </head>

  <body>
  <nav class="navbar navbar-default navbar-fixed-top" color-on-scroll="200">
      <!-- if you want to keep the navbar hidden you can add this class to the navbar "navbar-burger"-->
      <div class="container">
          <div class="navbar-header">
              <button id="menu-toggle" type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example">
                  <span class="sr-only">Navegação</span>
                  <span class="icon-bar bar1"></span>
                  <span class="icon-bar bar2"></span>
                  <span class="icon-bar bar3"></span>
              </button>
              <a href="/" class="navbar-brand">
                  Esportes Inatel
              </a>
          </div>
          <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right navbar-uppercase">

                <li>
                    <a href="/">Início</a>
                </li>

                <li>
                    <a href="/listar-pessoas">Listar</a>
                </li>

                <li>
                    <a href="/#noticias">Notícias</a>
                </li>
              </ul>
          </div>
          <!-- /.navbar-collapse -->
      </div>
  </nav>

  <div class="container contact-form">
      <div class="contact-image">
          <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact"/>
      </div>
        <form action="/cadastrar-pessoa/" method="POST" onsubmit="return validacao()">
            <h3>Cadastrar aluno</h3>
           <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input id="nome" type="text" name="nome" class="form-control" placeholder="Seu nome *" value="" />
                    </div>
                    <div class="form-group">
                        <input id="email" type="email" name="email" class="form-control" placeholder="Seu email *" value="" />
                    </div>
                    <div class="form-group">
                        <input id="cpf" type="text" name="cpf" class="form-control" placeholder="CPF *" value="" />
                    </div>
                    <div class="form-group">
                        <input id="matricula" type="text" name="matricula" class="form-control" placeholder="Sua matrícula *" value="" />
                    </div>

                    <div>
                      <div>
                        <input type="submit" class="btnContact" value="Salvar" />
                      </div>
                      <br></br>

                      <div class="form-group">
                        <input type="reset" class="btnContact" value="Limpar campos acima"/>
                      </div>
                    </div>

                </div>

            </div>
        </form>
  </div>
  </body>
</html>
